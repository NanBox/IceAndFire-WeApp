/**index.wxss**/

page {
  background-color: lightgray;
}

.root {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.tab-bar {
  position: relative;
  display: flex;
  font-size: 13pt;
  color: #ddd;
  background: #607d8b;
  line-height: 80rpx;
}

.tab-bar .tab {
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-bar .active {
  color: white;
}

.tab-bar .under-line {
  position: absolute;
  bottom: 0;
  height: 4rpx;
  background-color: #40c4ff;
}

.scroll-view {
  position: relative;
  width: 100%;
  height: 100%;
}

.scroll-view .scroll-view-wrapper {
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
}

.item {
  background: white;
  margin: 15rpx;
  padding: 15rpx;
}

.item .img {
  width: 100%;
}

.item .name {
  font-size: 17pt;
  margin-top: 10rpx;
}

.item .intro {
  margin-top: 3rpx;
  font-size: 14pt;
}

.withAnimate {
  transition: all 100ms ease;
}
